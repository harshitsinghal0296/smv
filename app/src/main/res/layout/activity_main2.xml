<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.story.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:theme="@style/AppTheme.AppBarOverlay"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="134dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.67"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    tools:ignore="NotSibling,ObsoleteLayoutParam">

                </android.support.v7.widget.Toolbar>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_toStartOf="@+id/textView7"
                    android:layout_weight="0.15"
                    android:paddingBottom="0dp"
                    android:paddingTop="16dp"
                    android:text="@string/app_name"
                    android:textSize="20sp"
                    tools:ignore="ObsoleteLayoutParam,RelativeOverlap,RtlHardcoded" />

                <View
                    android:id="@+id/underlineView"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignEnd="@+id/textView5"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignRight="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/background_dark"
                    tools:ignore="RtlHardcoded" />

                <View
                    android:id="@+id/textView7"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/likevw"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@+id/likevw"
                    android:background="@android:color/background_dark"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/likevw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="0.15"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:paddingTop="16dp"
                    android:text="@string/upload"
                    android:textSize="20sp"
                    tools:ignore="ObsoleteLayoutParam" />

                <View
                    android:id="@+id/underlineView1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignEnd="@+id/likevw"
                    android:layout_alignRight="@+id/likevw"
                    android:layout_alignStart="@+id/likevw"
                    android:layout_below="@+id/likevw"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/background_dark"
                    tools:ignore="RtlHardcoded" />

            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9.9"
            android:background="@color/colorPrimaryD"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nwsfd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/newsfeed"
                        android:textColor="@color/tabactivecolor"
                        android:textSize="18sp"
                        tools:ignore="ObsoleteLayoutParam" />

                    <ImageView
                        android:id="@+id/upimg"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_below="@+id/nwsfd"
                        android:layout_marginEnd="60dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/uploadimage"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:orientation="vertical">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/upimg"
                        android:layout_marginTop="10dp"
                        android:background="#ff2e54"
                        app:tabGravity="center"
                        app:tabMinWidth="120dp"
                        app:tabSelectedTextColor="@android:color/background_light"
                        app:tabTextAppearance="@style/MyCustomTextAppearance"
                        app:tabTextColor="#fcb3c1"
                        tools:ignore="ObsoleteLayoutParam">

                    </android.support.design.widget.TabLayout>

                    <com.example.asus.story.CustomViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/tabs" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
