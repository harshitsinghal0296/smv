<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.22"
    android:id="@+id/card"
    tools:ignore="InefficientWeight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.22"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription,ObsoleteLayoutParam" />

        <TextView
            android:id="@+id/txtViewer"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_above="@+id/imageView3"
            android:layout_alignTop="@+id/imgView"
            android:layout_marginRight="0dp"
            android:layout_toEndOf="@+id/imgView"
            android:gravity="left"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            tools:ignore="InefficientWeight,RtlHardcoded,SpUsage" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@+id/imgView"
            android:layout_toEndOf="@+id/imgView"
            app:srcCompat="@drawable/holoheart"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/imageView3"
            android:paddingBottom="0dp"
            android:text="26 Likes"
            android:textSize="12sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/likes"
            app:srcCompat="@drawable/holocomment"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/likes"
            android:layout_alignBottom="@+id/likes"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/imageView4"
            android:text="26 Comments"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="14dp"
            android:layout_height="5dp"
            android:layout_alignBottom="@+id/likes"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/threedots"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
